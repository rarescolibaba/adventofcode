/** Part One **/

#include <iostream>
#include <fstream>
using namespace std;

ifstream fin("input");

int main() {
	int x, prev, i = 0;
	fin>>prev;
	while (fin>>x) {
		if (x > prev) i++;
		prev = x;
	}
	cout<<i<<endl;
}

/** Part Two **/

#include <iostream>
#include <fstream>
#include <queue>
using namespace std;

ifstream fin("input");

int main() {
	queue<int> buffa;
	int x, i = 0;
	for (int i = 0; i < 3; i++) fin>>x, buffa.push(x);
	while (fin>>x) {
		buffa.push(x);
		if (buffa.back() > buffa.front()) i++;
		buffa.pop();
	}
	cout<<i<<endl;
}
